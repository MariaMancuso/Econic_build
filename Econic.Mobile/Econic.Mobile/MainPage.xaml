<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.MainPage"
             BackgroundColor="WhiteSmoke">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Button Text="Owner"
                Clicked="OwnerClicked" 
                BackgroundColor="#517486"
                CornerRadius="25"
                TextColor="White"
                Padding="80, 0, 80, 0"/>
        <Button Text="Employee"
                Clicked="EmployeeClicked"
                BackgroundColor="#517486"
                CornerRadius="25"
                TextColor="White"
                Padding="80, 0, 80, 0"/>
        <Button Text="Customer" 
                Clicked="CustomerClicked" 
                BackgroundColor="#517486"
                CornerRadius="25"
                TextColor="White"
                Padding="80, 0, 80, 0"/>
    </StackLayout>

</ContentPage>
