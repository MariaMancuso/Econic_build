<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:magicGradients="clr-namespace:MagicGradients;assembly=MagicGradients" x:Class="Econic.Mobile.Views.OwnerReg.RewardSplash"
             NavigationPage.HasNavigationBar="False" Padding="0">

    <ContentPage.Content>
        <Grid>
            <Image Source="OwnerSplashPage2" Aspect="AspectFill" />

            <magicGradients:GradientView VerticalOptions="FillAndExpand">
                <magicGradients:GradientView.GradientSource>
                    <magicGradients:LinearGradient>
                        <magicGradients:GradientStop Color="Transparent" Offset="0.5" RenderOffset="1" />
                        <magicGradients:GradientStop Color="#D03737" Offset="1" />
                    </magicGradients:LinearGradient>
                </magicGradients:GradientView.GradientSource>
            </magicGradients:GradientView>

            <Grid VerticalOptions="Center" Margin="0, 160, 0, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="green_splash_screen_shape.png" HorizontalOptions="Start" WidthRequest="350" HeightRequest="220" Aspect="Fill"/>
                <StackLayout Grid.Row="0" VerticalOptions="Center">
                    <Label Padding="20, 0, 0, 0" Text="Revyvv" TextColor="White" FontSize="34" />
                    <Label Grid.Row="1" Padding="20, 0, 50, 0" Text="FINDS AND REWARDS YOUR LOYAL CUSTOMERS" 
                           FontFamily="QuicksandBold" TextColor="White" FontSize="34" VerticalOptions="End" />
                </StackLayout>
            </Grid>
            <Image Source="red_deal_icon.png" Aspect="AspectFit" HorizontalOptions="Start" VerticalOptions="Start" Margin="15" WidthRequest="50" HeightRequest="50" />
            <ImageButton Clicked="BtnClicked" Style="{StaticResource SplashButton}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>