<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.OwnerReg.Classification"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="WhiteSmoke"
             ControlTemplate="{StaticResource NavigationTemplate}">


    <ContentPage.Content>
        <Grid RowSpacing="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            
            <Label Grid.Row="0" Text="This is where you upload 5 to 10 of your bestselling products and services." FontFamily="QuicksandBold" TextColor="#404040" FontSize="20"/>
            <StackLayout Grid.Row="1">
                <Label Padding="0, 0, 10, 0" Text="We're all about profits so we only care about the bestsellers, you should too." FontSize="14" FontFamily="QuicksandBold" TextColor="#404040" />
                <Label Text="Select all the apply." FontFamily="QuicksandBold" TextColor="#404040" FontSize="14" />
            </StackLayout>

            <StackLayout Grid.Row="2" Spacing="20">
                <Frame CornerRadius="20" >
                    <StackLayout Orientation="Horizontal">
                        <Image Source="Services" />
                        <Label Text="Services" FontFamily="QuicksandBold" TextColor="#404040" VerticalTextAlignment="Center" />
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CMTapped}" CommandParameter="{Binding Source={x:RelativeSource Self}}" />
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame CornerRadius="20" >
                    <StackLayout Orientation="Horizontal">
                        <Image Source="Products" />
                        <Label Text="Goods" FontFamily="QuicksandBold" TextColor="#404040" VerticalTextAlignment="Center" />
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CMTapped}" CommandParameter="{Binding Source={x:RelativeSource Self}}" />
                    </Frame.GestureRecognizers>
                </Frame>

                <Label Text="Have a picture, name, price range, and description prepared. Upload a minimum of 1" FontSize="14" FontFamily="QuicksandBold" TextColor="#404040"/>
            </StackLayout>


            <StackLayout Grid.Row="3" VerticalOptions="EndAndExpand">
                <ContentView ControlTemplate="{StaticResource Footer}"/>
            </StackLayout>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>