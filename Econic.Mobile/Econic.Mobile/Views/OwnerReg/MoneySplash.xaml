<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Econic.Mobile.Views.OwnerReg.MoneySplash"
             NavigationPage.HasNavigationBar="False"
             xmlns:controls="clr-namespace:Econic.Mobile.Renderers"
             BackgroundColor="WhiteSmoke" 
             xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
             Padding="0">
    <ContentPage.Content>
        <SwipeView>
            <SwipeView.BottomItems>
                <SwipeItems Mode="Reveal"
                            SwipeBehaviorOnInvoked="RemainOpen">

                    <SwipeItemView>
                        <Grid x:Name="gg" 
                              Padding="0, 10, 0, 0" 
                              HeightRequest="659.428571428571">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" 
                                   Text="Econic" 
                                   HorizontalOptions="CenterAndExpand" 
                                   VerticalOptions="Center" 
                                   TextColor="Silver" 
                                   FontSize="20" />

                            <StackLayout Grid.Row="1">

                                <Grid Padding="10, 0, 10, 0"
                                      RowSpacing="40" 
                                      VerticalOptions="FillAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0"
                                           Text="We know your business is unique. It's yours. Let's get to know each other." 
                                           FontFamily="QuicksandBold" 
                                           TextColor="#404040" 
                                           FontSize="20" />

                                    <StackLayout Grid.Row="1">
                                        <Label Text="This is what my business is called:" 
                                               TextColor="#404040" 
                                               FontFamily="QuicksandBold" />
                                        <Frame Style="{StaticResource Customframe}">
                                            <controls:CustomEntry Text="{Binding Owner.BusinessName}"
                                                                  TextColor="#404040"  
                                                                  Placeholder="Type the name here"
                                                                  PlaceholderColor="DarkGray" />
                                        </Frame>
                                    </StackLayout>

                                    <StackLayout Grid.Row="2">
                                        <Label Text="This is what my business sells:" 
                                               FontFamily="QuicksandBold"
                                               TextColor="#404040" />
                                        <Label Text="Select all that makes sense"
                                               FontFamily="QuicksandMedium" 
                                               TextColor="DimGray" />

                                        <Frame Style="{StaticResource Customframe}">

                                            <controls:CustomDropDown HorizontalOptions ="FillAndExpand"
                                                                     VerticalOptions="Center"
                                                                     x:Name="productsDropdown"/>
                                        </Frame>


                                        <Frame Style="{StaticResource Customframe}">
                                            <controls:CustomDropDown x:Name="serviceDropdown"
                                                                     HorizontalOptions="FillAndExpand"
                                                                     VerticalOptions="Center"/>

                                        </Frame>
                                    </StackLayout>

                                    <StackLayout Grid.Row="3" VerticalOptions="End">
                                        <Button Command="{Binding OpenPageCommand}" CommandParameter="Address" Text="Continue" Style="{StaticResource NextItemButton}" />
                                        <ContentView ControlTemplate="{StaticResource Footer}" Margin="0, 0, 0, 20" />
                                    </StackLayout>
                                </Grid>
                            </StackLayout>

                        </Grid>
                    </SwipeItemView>
                </SwipeItems>
            </SwipeView.BottomItems>
            <Grid>
                <Image Source="OwnerSplashPage4" Aspect="AspectFill" />
                <StackLayout HorizontalOptions="Center" VerticalOptions="End" Orientation="Vertical" Margin="20">
                    <Image Source="swipeup" WidthRequest="70" HeightRequest="70" />
                </StackLayout>
            </Grid>
        </SwipeView>
    </ContentPage.Content>
</ContentPage>