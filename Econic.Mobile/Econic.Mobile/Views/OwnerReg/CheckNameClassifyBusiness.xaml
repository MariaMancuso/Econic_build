                                                WatermarkColor="#404040">
                                                <combobox:SfComboBox.ComboBoxSource>
                                                    <ListCollection:List x:TypeArguments="x:String">
                                                        <x:String>Goods</x:String>
                                                        <x:String>Apparel</x:String>
                                                        <x:String>Food service</x:String>
                                                        <x:String>Household goods</x:String>
                                                        <x:String>Sports</x:String>
                                                        <x:String>Health and Beauty</x:String>
                                                        <x:String>Jewlery</x:String>
                                                    </ListCollection:List>
                                                </combobox:SfComboBox.ComboBoxSource>
                                            </combobox:SfComboBox>-->
                                        </Frame>
                                    </StackLayout>

                                    <StackLayout Grid.Row="3" VerticalOptions="End">
                                        <Button Command="{Binding OpenPageCommand}" CommandParameter="Address" Text="Continue" Style="{StaticResource NextItemButton}" />
                                        <ContentView ControlTemplate="{StaticResource Footer}" Margin="0, 0, 0, 20" />
                                    </StackLayout>
                                </Grid>
                            </StackLayout>

                        </Grid>
    </ContentPage.Content>
</ContentPage>