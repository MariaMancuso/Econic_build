<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Econic.Mobile.Views.Customer.DealBoard"
             Padding="0"
             ControlTemplate="{StaticResource PageWithoutBackBtn}">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="22,0,22,0">
                <Label Text="Dealboard"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontFamily="QuicksandBold"
                       FontSize="24"/>
               
            </StackLayout>
            <RelativeLayout HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand">
                <ActivityIndicator x:Name="runner" IsRunning="True"/>
            </RelativeLayout>
            <ContentView x:Name="Dash"
                         Padding="0"/>
            <!--<ContentView x:Name="cardView"/>-->

            <ContentView x:Name="TabbedView"
                         Padding="0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>