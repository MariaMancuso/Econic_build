<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.Customer.LoyaltyConfirmation"
             ControlTemplate="{StaticResource NavigationTemplate}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Hi, Jeanie"
                   FontSize="24"
                   HorizontalOptions="Start"
                   FontFamily="QuicksandBold"/>
            <Label Text="MY POINTS"/>
            <Label Text="MY PROGRESS"/>
            <StackLayout>
                <Frame x:Name="frame" 
                       CornerRadius="18"
                       HasShadow="True"
                       BorderColor="WhiteSmoke"
                       HeightRequest="80"
                       >
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped ="TapGestureRecognizer_Tapped"/>
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width=".25*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="icon_tree_disabled.png"
                               Grid.Column="0"
                               HeightRequest="100"/>
                        <StackLayout Grid.Column="1" 
                                     Padding="10, 0, 0, 0" 
                                     VerticalOptions="CenterAndExpand">
                            <Label Text="Level 5"
                                   FontFamily="QuicksandBold"
                                   FontSize="20"
                                   HorizontalTextAlignment="Start"/>
                            <Label Text="Learn more about levels"
                                   HorizontalTextAlignment="Start"/>
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" 
                                     HeightRequest="20"
                                     Grid.Column="2">
                            <Image x:Name="NextButton" 
                                   Source="forward_arrow.png" 
                                   HeightRequest="20"
                                   HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </Grid>
                </Frame>
            </StackLayout>

            <StackLayout>
                <Frame x:Name="blackfridayframe" 
                       CornerRadius="18"
                       HasShadow="True"
                       BorderColor="WhiteSmoke"
                       HeightRequest="80"
                       Padding="0, 25, 0, 10">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped ="TapGestureRecognizer_Tapped"/>
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackLayout Orientation="Horizontal" 
                                     Grid.Row="0"
                                     HorizontalOptions="CenterAndExpand">
                        <Image Source="loyalty_bages_day_disabled.png"
                               />
                            <Image Source="circle.png"
                               
                               HeightRequest="100"/>
                            <Image Source="circle.png"
                               
                               HeightRequest="100"/>
                            <Image Source="circle.png"
                               
                               HeightRequest="100"/>
                            <Image Source="circle.png"
                               
                               HeightRequest="100"/>
                            <Image Source="inactivefriday.png"
                                   HeightRequest="150"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" 
                                     HorizontalOptions="CenterAndExpand"
                                     HeightRequest="10"
                                     Grid.Row="1">
                            <Label Text="View all"
                                   />
                            <Image x:Name="NextButton" 
                                   Source="forward_arrow.png" 
                                   HeightRequest="10"
                                   HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </Grid>
                </Frame>
            </StackLayout>

            <StackLayout>
                <Frame x:Name="tokenframe" 
                       CornerRadius="18"
                       HasShadow="True"
                       BorderColor="WhiteSmoke"
                       HeightRequest="100">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped ="TapGestureRecognizer_Tapped"/>
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width=".25*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="img_token_yellow.png"
                               Grid.Column="0"
                               HeightRequest="60"/>
                        <StackLayout Grid.Column="1" Padding="10, 0, 0, 0" VerticalOptions="CenterAndExpand">
                            <Label Text="You have 24 Tokens"
                                   FontFamily="QuicksandBold"
                                   FontSize="20"
                                   HorizontalTextAlignment="Start"/>
                            <Label Text="What can I do with my tokens?"
                                   HorizontalTextAlignment="Start"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" 
                                     HeightRequest="20"
                                     Grid.Column="2">
                            <Image x:Name="NextButton" 
                                   Source="forward_arrow.png" 
                                   HeightRequest="20"
                                   HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </Grid>
                </Frame>
            </StackLayout>
            <ContentView x:Name="TabbedView"
                         Padding="0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>