<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.Customer.LandingPage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
 
                <Frame HeightRequest="141"
                       WidthRequest="141"
                       HorizontalOptions="Center"/>
                <ContentView x:Name="WelcomeContent"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Text="Shop"
                            Grid.Column="0"
                            CornerRadius="18"
                            BackgroundColor="White"
                            TextColor="{StaticResource ThemeColor}"
                            Clicked="Shop_Clicked"
                            />
                    <Button Text="Book"
                            Grid.Column="1"
                            CornerRadius="18"
                            BackgroundColor="White"
                            TextColor="{StaticResource ThemeColor}"
                            Clicked="Book_Clicked"/>
                </Grid>

                <ContentView x:Name="FaveServices"/>
                <ContentView x:Name="FaveProducts"/>
                <!--<ContentView x:Name="WishList"/>-->

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>