<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.Customer.LandingPage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame HeightRequest="141"
                       WidthRequest="141"
                       HorizontalOptions="Center"/>
                <ContentView ControlTemplate="{StaticResource WelcomeActionsControlTemplate}"
                             x:Name="WelcomeActions"
                             IsVisible="True"/>
                <Grid Padding="0, 22, 0, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="3"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <BoxView BackgroundColor="{StaticResource ThemeColor}"
                         Grid.Column="0"
                         Grid.Row="0"/>
                    <Label Style="{StaticResource SectionText}"
                       Text="Quick Actions"
                       Grid.Column="1" 
                       Grid.RowSpan="2"
                       Padding="0, -4, 0, 0"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Text="Shop"
                            Grid.Column="0"
                            CornerRadius="18"
                            BackgroundColor="White"
                            TextColor="{StaticResource ThemeColor}"
                            Clicked="Shop_Clicked"
                            />
                    <Button Text="Book"
                            Grid.Column="1"
                            CornerRadius="18"
                            BackgroundColor="White"
                            TextColor="{StaticResource ThemeColor}"
                            Clicked="Book_Clicked"/>
                </Grid>

                        <ContentView ControlTemplate="{StaticResource FaveServicesControlTemplate}"
                             x:Name="FaveServices"/>
                <ContentView ControlTemplate="{StaticResource FavoriteProductsControlTemplate}"
                             x:Name="FaveProducts"/>
                <ContentView ControlTemplate="{StaticResource WishListControlTemplate}"
                             x:Name="WishList"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>