<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.Customer.GenerateDeals"
             xmlns:magicGradients="clr-namespace:MagicGradients;assembly=MagicGradients"
             BackgroundColor="#343434"
             Padding="0">
    <ContentPage.Content>
        <StackLayout Padding="0, 150, 0, 150">
            <ImageButton Source="iconrevyvv1.png"
                         HorizontalOptions="CenterAndExpand"
                         VerticalOptions="CenterAndExpand"
                         Command="{Binding OpenPageCommand}"
                         CommandParameter="ClickEngine"
                         BackgroundColor="Transparent"/>
            <Label Text="Tap the engine to generate your deals!"
                   Padding="75, 0, 75, 0"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="CenterAndExpand"
                   VerticalTextAlignment="Center"
                   VerticalOptions="CenterAndExpand"
                   TextColor="White"
                   FontFamily="QuicksandBold"
                   FontSize="24"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>