<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.Customer.ListServices">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout Padding="0">
                    <StackLayout Padding="16, 20, 28, 22" Spacing="11">
                        <ContentView ControlTemplate="{StaticResource FeatureHeaderControlTemplate}"/>
                        <ContentView x:Name="Services"/>
                    </StackLayout>


                </StackLayout>
            </ScrollView>
            <ContentView x:Name="TabbedView"
                             VerticalOptions="EndAndExpand"
                             Padding="0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>