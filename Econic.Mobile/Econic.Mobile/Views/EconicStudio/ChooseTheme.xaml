                    <Label Text="Select a color"
                   TextColor="White"
                   HorizontalOptions="Center"
                       HorizontalTextAlignment="Start"
                   FontSize="14"/>

                    <Grid x:Name ="grid" 
                      HorizontalOptions="CenterAndExpand"
                      Padding="0, 0, 0, 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="18"/>
                        </Grid.ColumnDefinitions>
                        <BoxView BackgroundColor="#c72129"
                             Grid.Row="0"
                             Grid.Column="0"/>
                        <BoxView BackgroundColor="#ff8611"
                             Grid.Row="0"
                             Grid.Column="1"/>
                        <BoxView BackgroundColor="#32922c"
                             Grid.Row="0"
