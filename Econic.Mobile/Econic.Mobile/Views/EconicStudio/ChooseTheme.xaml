                             Grid.Row="1"
                             Grid.Column="1"/>
                        <BoxView BackgroundColor="#354134"
                             Grid.Row="1"
                             Grid.Column="2"/>
                        <BoxView BackgroundColor="#7323a8"
                             Grid.Row="1"
                             Grid.Column="3"/>
                        <BoxView BackgroundColor="#6f6f6f"
                             Grid.Row="1"
                             Grid.Column="4"/>
                        <BoxView BackgroundColor="#c9a015"
                             Grid.Row="1"
                             Grid.Column="5"/>
                    </Grid>


                    <Button Text="Continue"
                    HorizontalOptions="CenterAndExpand"
                    Padding="80, 0, 80, 0"
                    BackgroundColor="White"
                    TextColor="#434343"
                    FontFamily="QuicksandBold"
                    CornerRadius="25"
                    FontSize="16"
                    Command="{Binding OpenPageCommand}"
                    CommandParameter="NotifyMethod"/>

                <ContentView ControlTemplate="{StaticResource Footer}"
                         VerticalOptions="EndAndExpand"
                             Padding="0, 20, 0, 10"/>
