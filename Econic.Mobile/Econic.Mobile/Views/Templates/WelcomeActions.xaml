<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.Templates.WelcomeActions">
    <ContentView.Content>
        <StackLayout Padding="0, 0, 0, 22" Spacing="11">
            <ContentView ControlTemplate="{StaticResource FeatureHeaderControlTemplate}"/>
            <!--<sh1:Shadows>-->
            <Button Text="Appointment"
                                Style="{StaticResource LandingBttn}"
                                WidthRequest="331"
                                HeightRequest="57"
                                Padding="13, 0, 0, 0"
                                Command="{Binding ClickedCommand}"
                                CommandParameter="Book"
                                />
            <!--</sh1:Shadows>
                    <sh1:Shadows>-->
            <Button Text="Deals"
                                Style="{StaticResource LandingBttn}"
                                WidthRequest="331"
                                HeightRequest="57"
                                Padding="13, 0, 0, 0"
                                />
            <!--</sh1:Shadows>

                    <sh1:Shadows>-->
            <Button Text="See todays sales!"
                                Style="{StaticResource LandingBttn}"
                                WidthRequest="331"
                                HeightRequest="88"
                                Padding="32, 0, 42, 0"
                                ContentLayout="Right, 1"
                                BackgroundColor="{DynamicResource ThemeColor}"
                                TextColor="White"
                                />
            <!--</sh1:Shadows>-->

        </StackLayout>
    </ContentView.Content>
</ContentView>