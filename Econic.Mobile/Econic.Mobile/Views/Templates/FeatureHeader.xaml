<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.Templates.FeatureHeader">
    <ContentPage.Content>
        <StackLayout>
            <Grid Padding="0, 25, 0, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="3"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <BoxView BackgroundColor="{StaticResource ThemeColor}"
                                 Grid.Column="0"
                                 Grid.Row="0"
                                 HorizontalOptions="StartAndExpand"/>
                <Label Style="{StaticResource SectionText}"
                               Text="Today"
                               Grid.Column="1" 
                               Grid.RowSpan="2"
                               Padding="0, -3, 0, 0"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>