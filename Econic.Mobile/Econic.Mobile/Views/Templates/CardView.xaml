<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.Templates.CardView">
  <ContentView.Content>
        <StackLayout>
            <Frame IsVisible="False"
               BackgroundColor="#3e8f52"
               CornerRadius="18">
            <StackLayout>
                <Label Text="Ziba Beauty"/>
                <Label Text="Today's Deal"
                       FontSize="24"
                       FontFamily="Quicksand"/>
                <Label Text="$19.99"
                       FontSize="32"
                       FontFamily="QuicksandBold"/>
                <Label Text="2 for 1 Nail Polish"/>
                <Frame HeightRequest="170"
                       WidthRequest="190"/>
                <Button Text="Buy it now!"
                        BackgroundColor="White"
                        CornerRadius="18"/>

            </StackLayout>
        </Frame>
            </StackLayout>
    </ContentView.Content>
</ContentView>