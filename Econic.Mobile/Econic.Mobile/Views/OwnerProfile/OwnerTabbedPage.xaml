<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.OwnerProfile.OwnerTabbedPage"
            xmlns:page1="clr-namespace:Econic.Mobile.Views.Shared.HamburgerMenu"
            xmlns:page3="clr-namespace:Econic.Mobile.Views.OwnerProfile">
    <NavigationPage.TitleView >
        <StackLayout Orientation="Horizontal" Padding="10, 0, 10, 0">
            <Label Text="Ziba Beauty" TextColor="Silver" VerticalOptions="Center"/>
            <ImageButton 
                Command="{Binding OpenPageCommand}" 
                CommandParameter="Settings"
                BackgroundColor="Transparent" 
                Source="icon_settings" 
                HorizontalOptions="EndAndExpand"
                HeightRequest="35" 
                WidthRequest="35"/>
        </StackLayout>
    </NavigationPage.TitleView>
  <!--Pages can be added as references or inline-->
    <TabbedPage.Children>
        <page1:Dashboard Title="Dashboard" BackgroundColor="WhiteSmoke"/>
        <ContentPage Title="Feed"/>
        <NavigationPage Title="Admin" BackgroundColor="WhiteSmoke" BarBackgroundColor="WhiteSmoke">
            <x:Arguments>
                <page3:AdminMenu />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>