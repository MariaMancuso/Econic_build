<?xml version="1.0" encoding="utf-8" ?>
<renderers:CustomTabbedPage xmlns:renderers="clr-namespace:Econic.Mobile.Renderers"
                            xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econic.Mobile.Views.OwnerProfile.OwnerTabbedPage"
            xmlns:page1="clr-namespace:Econic.Mobile.Views.Shared.HamburgerMenu"
            xmlns:page3="clr-namespace:Econic.Mobile.Views.OwnerProfile" SelectedTabColor="#276DD6" UnselectedTabColor="DarkGray">

  <!--Pages can be added as references or inline-->
    <NavigationPage Title="Dashboard" BarBackgroundColor="WhiteSmoke" IconImageSource="icon_dashboard">
        <x:Arguments>
            <page1:Dashboard />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Alerts" BarBackgroundColor="WhiteSmoke" IconImageSource="icon_alert">
        <x:Arguments>
            <ContentPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Account" BarBackgroundColor="WhiteSmoke" IconImageSource="icon_account">
        <x:Arguments>
            <page3:AdminMenu />
        </x:Arguments>
    </NavigationPage>
</renderers:CustomTabbedPage>